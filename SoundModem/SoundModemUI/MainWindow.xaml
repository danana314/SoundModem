<Window x:Class="SoundModemUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:SoundModemUI"
        Title="Sound Modem" Height="350" Width="525">
    <Window.DataContext>
        <ui:ViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
                <TextBox Text="{Binding Frequency}" Width="100" Margin="0,0,5,0" />
                <Button Content="Beep" Command="{Binding BeepCmd}" Width="75"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
                <TextBox Text="{Binding UnencodedMessage}" Width="100" Margin="0,0,5,0"/>
                <Button Content="Encode" Command="{Binding EncodeCmd}" Width="75" />
            </StackPanel>
            <StackPanel>
                <Label Content="Encoded Message:" HorizontalAlignment="Left" />
                <Label Content="{Binding EncodedMessage}" Width="100" Margin="5,0,0,0"/>
                <Label Content="Decoded Message:" HorizontalAlignment="Left" />
                <Label Content="{Binding DecodedMessage}" Width="100" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
